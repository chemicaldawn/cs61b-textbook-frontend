---
import Hamburger from "../client/decoration/hamburger.svelte"

import Page from "./page.astro"
import Pagemap from "../client/pagemap.svelte"
import Search from "./search.astro"
import Sidebar from "./sidebar.astro"

import "../../style/theme.css"
import Header from "./header.astro"

const { slug } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>CS61B Textbook</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header />
		<div id="main">
			<Sidebar slug={slug}></Sidebar>
			<div id="content">
				<Page slug={slug} />
			</div>
			<Pagemap client:load />
		</div>
	</body>
</html>

<style>
	div#main {
		container-type: size;

		display: flex;
		justify-content: stretch;
		flex-direction: row;
		flex-grow: 1;
	}

	div#content {
		overflow-x: hidden;
		overflow-y: scroll;

		max-height: 100cqh;
		z-index: 1;

		background-color: light-dark(var(--foreground-light), var(--foreground-dark));
		box-shadow: 2px 0px 15px rgba(0, 0, 0, 0.454);

		padding-left: 5vw;
		padding-right: 5vw;

		padding-top: 2rem;

		flex-grow: 1;

		opacity: 1;
		transition: opacity 100ms ease-in-out;

		img {
			border-radius: 0.4rem;
			max-width: 100%;
		}
	}

	div#content.hidden {
		opacity: 0;
	}
</style>

<style is:global>
	:root {
		color-scheme: light dark;
	}

	* {
	}

	html, body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	body {
		display: flex;
		flex-direction: column;

		background-color: light-dark(var(--background-light),var(--background-dark));
	}

	p, a, div, input {
		color: light-dark(var(--text-light), var(--text-dark));
		font-size: var(--paragraph-size);
		font-family: var(--paragraph-font);

		line-height: 1.6;
		font-weight: 355;
	}

	h1, h2, h3, h4, h5 {
		color: light-dark(var(--text-light), var(--text-dark))
	}

	a {
		color: light-dark(var(--links-light), var(--links-dark))
	}

	div {
		scrollbar-width: 0.25rem;
		scrollbar-color: rgba(255, 255, 255, 0.394) transparent;
	}

	code {
		font-family: var(--code-font);
		font-size: var(--code-size);
		font-weight: 400;

		background-color: rgb(17, 17, 19);
		border: 1px solid rgb(59, 56, 66);
		border-radius: 0.25rem;

		padding: 0.1rem;
		padding-left: 0.3rem;
		padding-right: 0.3rem;

		white-space: nowrap;
	}

	.astro-code {
		padding: 0.9rem;
		border-radius: 0.4rem;

		display: flex;
		flex-direction: column;
		gap:0.05rem;

		code {
			white-space: inherit !important;
			background: none;
			border: none;

			span.line {
				display: inline-block;
				border-radius: 0.2rem;

				line-height: 1;

				padding: 2.5px;
				width: 100%;

				outline: none;
			}

			span.line:hover {
				outline: 1px solid gray;
			}
		}
	}

	div.article-title {
		display: flex;
		gap: 1rem;
		align-items: start;

		font-size: 1.2rem;
		font-weight: 600;

		h1.section {
			color:rgb(255, 255, 255);
			background-color: light-dark(var(--accent-high-light), var(--accent-high-dark));
			border-radius: 0.5rem;

			font-size: 1.5rem;
			padding-left: 0.75rem;
			padding-right: 0.75rem;

			margin: 0;

			box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.403);
		}

		h1.title {
			font-size: 2rem;
			line-height: 1.2;
			margin: 0;

			padding-bottom: 0.5rem;

			text-shadow: 3px 3px 4px rgba(0, 0, 0, 0.7);
		}
	}

	div.article-authors {
		color: gray;
	}
</style>